<h2>All Drinks</h2>
<p><%= link_to "Add a New Drink", new_drink_path %></p>
<%= form_tag '/drinks', method:'get' do %>
  <%= hidden_field_tag 'complex', '1' %>
  <%= submit_tag 'Show drinks w/ 3+ ingredients' %>
<% end %>

<% @drinks.each do |d| %>
  <p> <%= link_to d.name, drink_path(d) %>
</p>
<% end %>
