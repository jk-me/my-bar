<%= form_for @drink do |f| %>
  <p>Name:</p>
  <%= f.text_field :name %>

  <p>Description:</p>
  <%= f.text_area  :description%>

  <p>Ingredients:</p>
  <% Ingredient.all.each do |ing| %>
    <div >
    <%= hidden_field_tag 'ingredients[][id]', ing.id %>
    <%= number_field_tag 'ingredients[][parts]', ing.find_join_record(@drink).nil? ? nil : ing.find_join_record(@drink).parts %>
    <%= label_tag 'ingredients[][name]', "part(s) #{ing.name}" %>
    </div>
  <% end %>

  <%= f.fields_for :ingredients, @drink.ingredients.build do |ing_field| %>
    <%= ing_field.text_field :name, placeholder: "Ingredient Name" %>
  <% end %>


  <p><%= check_box_tag :'drink[user_ids][]', current_user.id %> Add to your favorites</p>

  <%= f.submit %>
<% end %>
