<h1>Hello, <%= @user.name %></h1>
<p><%= link_to "Add a New Drink", new_drink_path %></p>

<p>Your favorites:</p>
<% @user.drinks.each do |d| %>
  <p><%= link_to d.name, drink_path(d) %></p>
<% end %>

<p>Your reviews (temp):</p>
<% @user.reviews.each do |r| %>
  <p><%= "#{r.rating}" + '/5' %></p>
  <p><%= r.content %></p>
<% end %>
