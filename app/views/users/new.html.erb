<body class='background-root'>
  <h1 class="form-header">Sign Up</h1>

  <%= render partial:'layouts/errors_expl', locals: {var: @user} %>

  <%= form_for @user do |f| %>
    <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
      <p class="form-label">Username: <%= f.text_field :name , class:"form-input"%></p>
    </div>
    <div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
      <p class="form-label">Password: <%= f.password_field :password , class:"form-input"%></p>
    </div>
    <%= f.submit "Sign Up", class:"btn btn-outline-secondary"%>
  <% end %>
  <%= link_to "Login with Facebook", '/auth/facebook'%>
  <i class="fab fa-facebook-square"></i>
</body>
