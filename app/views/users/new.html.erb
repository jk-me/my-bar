<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <p>Username: <%= f.text_field :name %></p>
  <p>Password: <%= f.password_field :password %></p>
  <%= f.submit %>
<% end %>


