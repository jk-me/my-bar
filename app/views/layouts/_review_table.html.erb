<table>
  <thead>
    <%if index %>
      <th>Drink</th>
    <% end %>
    <th>Rating</th>
    <th>Content</th>
    <th>Author</th>
  </thead>
  <tbody>
    <% reviews.each do |r| %>
      <tr>
        <%if index %>
          <td><%= r.drink.name %></td>
        <% end %>
        <td><%= "#{r.rating}" + '/5' %></td>
        <td id='review-cell-<%= r.id %>'><%= truncate r.content %>
            <%= link_to 'See More', '#', class:'full-rev', data: {id:"#{r.id}"}%>
        </td>
        <td><%= r.user.name%>

          <% if r.user == current_user %>
            <p><%= link_to "Edit", edit_review_path(r) %>  | <%= link_to "Delete", "/reviews/#{r.id}", method: :delete %></p>
          <% end %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
